{
	"extends": "ts-node/node16/tsconfig.json",
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"outDir": "./dist/",
		"rootDir": "./src/",
		"baseUrl": "./src/",
		"strict": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"moduleResolution": "node16",
		"resolveJsonModule": true
	},
	"ignorePatterns": [".eslintrc.cjs"],
	"exclude": ["./dist/**", "./node_modules/", "./dist/"],
	"compileOnSave": false,
	"buildOnSave": false
}
